{
    "name": "gruberro/php-mongo-migrations",
    "description": "Manage changes for your MongoDB documents",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Robert Gruber",
            "email": "robert@mir-zwoa.com"
        }
    ],
    "require": {
        "php": ">=7.0 | <= 8.1",
        "mongodb/mongodb": "^1.0.0",
        "symfony/console": "^3.0|^4.0|^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7.27 || ^6.0 || ^7.0 || ^8.0"
    },
    "autoload": {
        "psr-4": {
            "Gruberro\\MongoDbMigrations\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gruberro\\MongoDbMigrations\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/migrations"
    ]
}
